
[Unit]
Description=Fledger node
After=network.target

[Service]
Type=simple
ExecStart=/root/fledger \
    --config /root/fledgerA \
    --name "${FLEDGER_NODE_NAME}A" \
    --disable-turn-stun \
    --bootwait-max 15000 \
    --signal-url ws://${FLEDGER_CENTRAL_HOST}:8765 \
    -v \
    simulation dht-join-realm 
RemainAfterExit=yes
Restart=no
User=root
EnvironmentFile=/root/env.systemd
StandardOutput=append:/var/log/fledgerA

[Install]
WantedBy=multi-user.target
